{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["@testing-library/jest-dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "types": ["testing-library__jest-dom"]
}
